  <RecipeDef>
    <defName>SmeltIron</defName>
    <label>smelt iron bars</label>
    <description>Use heat to refine metal from its ore.</description>
    <jobString>Smelting iron bars.</jobString>
    <workAmount>800</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SB_iron_ore</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <products>
      <SB_iron_bar>10</SB_iron_bar>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SB_iron_ore</li>
      </thingDefs>
    </fixedIngredientFilter>
    <researchPrerequisite>SB_Tier1</researchPrerequisite>
      <recipeUsers>
        <li>ElectricSmelter</li>
      </recipeUsers>
  </RecipeDef>

