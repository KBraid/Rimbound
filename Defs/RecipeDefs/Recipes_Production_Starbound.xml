  <RecipeDef>
    <defName>SB_Make_powercell_aegisalt</defName>
    <label>make Aegisalt powercell</label>
    <description>Make a powercell.</description>
    <jobString>Making a powercell.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>10000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SB_refined_aegisalt</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SB_copper_ore</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SB_refined_aegisalt</li>
        <li>SB_copper_ore</li>
        <li>Gold</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <SB_powercell_aegisalt>1</SB_powercell_aegisalt>
    </products>
      <researchPrerequisite>SB_Tier5_Aegisalt</researchPrerequisite>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

